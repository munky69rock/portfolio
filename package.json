    "webpack-dev-server": "3.1.1",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "@types/node": "^9.4.7",
    "@types/react": "^16.0.25",
    "@types/react-dom": "^16.0.3",
    "node-sass": "^4.7.2",
    "prettier": "1.11.1",
    "prettier-stylelint": "^0.4.2",
    "prettier-tslint": "^0.3.0",
    "sass-loader": "^6.0.6",
    "stylelint": "~9.1.3",
    "stylelint-config-prettier": "^3.0.4",
    "stylelint-config-standard": "^18.0.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-plugin-prettier": "^1.3.0"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "lint": "yarn run tslint && yarn run prettier-stylelint && yarn run stylelint",
    "prettier-tslint": "prettier-tslint fix '**/*.ts{,x}'",
    "tslint": "tslint -p tsconfig.json -c tslint.json --fix 'src/**/*.ts{,x}'",
    "prettier-stylelint": "prettier-stylelint -q --write 'src/**/*.{,s}css'",
    "stylelint": "stylelint 'src/**/*.css' --fix",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "stylelint-check": "stylelint-config-prettier-check",
    "prettier-watch": "onchange '**/*.js' -- prettier --write {{changed}}"
  },
  "jest": {
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "/Users/uehara.masayuki/.ghq/github.com/munky69rock/munky69rock.github.io/tsconfig.test.json"
      }
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "prettier": {
    "parser": "typescript"
  }
}
